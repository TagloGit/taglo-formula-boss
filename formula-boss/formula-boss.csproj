<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>FormulaBoss</RootNamespace>
    <UseWPF>true</UseWPF>
    <ExcelDnaPackCompressResources>false</ExcelDnaPackCompressResources>
    <ExcelDna64Bit>true</ExcelDna64Bit>
    <SuppressTfmSupportBuildWarnings>true</SuppressTfmSupportBuildWarnings>
  </PropertyGroup>

  <ItemGroup>
    <Using Include="System.IO" />
    <InternalsVisibleTo Include="formula-boss.Tests" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="UI\FormulaBossSyntax.xshd" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AvalonEdit" Version="6.*" />
    <PackageReference Include="ExcelDna.AddIn" Version="1.*" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\formula-boss.Runtime\FormulaBoss.Runtime.csproj" />
  </ItemGroup>

</Project>
